<div class="row">
    <div class="col-md-6">
        <h2>Signup</h2>

        <form class="form signup-form">
        <div class="form-group">
            <label for="username-signup">username:</label>
            <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
            <label for="password-signup">password:</label>
            <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group d-grid gap-2">
            <button id="signup" class="btn btn-primary" type="submit">signup</button>
        </div>
        <div>
            <a href="/login" id="login" class="stretched-link fs-5 text-decoration-none">Login instead</a>
        </div>
        </form>
    </div>
</div>

<script src="./js/signup.js"></script>