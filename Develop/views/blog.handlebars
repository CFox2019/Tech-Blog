<div class="mb-3 col-md-12">
  <div class="border border-dark border-3 row mb-4 blog">
    <div class="header py-2 bg-dark">
      <strong><h2>{{title}}</h2></strong>
      <small class="float-end"><p>Created by {{user.username}} on {{format_date date_created}}</p></small>
    </div>
    <p>{{content}}</p>
  </div>
  <form class="form new-comment border border-dark border-3 row mb-4 comment">
      <div class="form-group">
        <label for="blog-comments">Comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group text-center col-md-12 d-grid gap-2">
        <button type="submit" class="btn btn-secondary">Submit</button>
      </div>
    </div>
  </form>
</div>
