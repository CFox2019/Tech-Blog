<div class="border border-dark border-3 row mb-4">
  <div class="header py-2 bg-dark">
    <h2>{{title}}</h2>
    <small class="float-end">
      Posted by {{user.username}} on {{format_date date_created}}
    </small>
  </div>
  <p>{{content}}</p>
</div>

  {{#if comments.length}}
  {{#each comments as |comment|}}
  <div class="border border-dark border-3 row mb-4">
    <div class="mb-4 col-md-12 comment-list">
      <p>{{comment.message}}</p>
      <p>-{{comment.user.username}}, {{format_date comment.date_created}}</p>
    </div>
  </div>
  {{/each}}
  {{/if}}

<div class="border border-3 border-dark row mb-4">
  <form class="form-group new-comment-form">
      <label for="blog-comment">Comment:</label>
      <textarea class="form-input" id="message" name="blog-comment">
        </textarea>
      <div class="form-group text-center d-grid gap-2">
        <button type="submit" class="btn btn-secondary new-comment-btn" data-blog-id={{id}}>
          Submit
        </button>
  </form>
</div>




<script src="../js/blog.js"></script>